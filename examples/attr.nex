import sound_lib

pub: class Hominoldea {
    pub var str: sub_family;
    pub var str: genus;
    pub var str: species;
}

attr Homo ext Homininidae.sub_family, Homininidae.genus => {
    sub_family = "Homininidae";
    genus = "Homo";
}

attr talk => {
    fn talk => (words: str) {
        sound_lib.play_text_to_voice(words);
    }
}

pub: class Sapien ext attr.Homo, attr.talk {
    species = "Sapien";
}

pub: class Erectus ext attr.Homo {
    species = "Erectus";
}

pub: class specieshavingnosubfamily ext 
    attr.Homininidae.genus, attr.Homininidae.species {
        pub var int: n_oflegs;
}

: fn main => () {

}